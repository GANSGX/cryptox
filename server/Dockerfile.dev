FROM node:20-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Copy source code (will be overridden by volume in docker-compose)
COPY . .

# Expose port
EXPOSE 3000

# Development mode with hot reload
CMD ["pnpm", "dev"]
