#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Lint staged files
pnpm exec lint-staged

# Type check (client)
echo "ğŸ” Type checking client..."
cd client && pnpm tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Client type check failed!"
  exit 1
fi
cd ..

# Type check (server)
echo "ğŸ” Type checking server..."
cd server && pnpm tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ Server type check failed!"
  exit 1
fi
cd ..

echo "âœ… Pre-commit checks passed!"
