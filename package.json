{
  "name": "cryptox",
  "version": "0.1.0",
  "description": "Secure messenger with E2E encryption",
  "private": true,
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "kill-ports": "bash scripts/kill-ports.sh",
    "dev:all": "concurrently \"pnpm docker:up\" \"pnpm dev:server\" \"pnpm dev:client\" -n \"docker,server,client\" -c \"blue,yellow,green\"",
    "dev:server": "cd server && pnpm dev",
    "dev:client": "cd client && pnpm dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "prepare": "husky"
  },
  "keywords": [
    "messenger",
    "e2e-encryption",
    "security",
    "webrtc",
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "server/**/*.ts": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
